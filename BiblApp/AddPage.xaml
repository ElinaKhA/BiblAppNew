<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiblApp.AddPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Grid.Row="1" >
            <Label x:Name="regLabel" Text="Добавьте книгу" FontSize="Large" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,0"/>
           
            <Entry Text="{Binding Name}" x:Name="name" Placeholder="Название" TextColor="Black" PlaceholderColor="Black" Margin="0,5,0,0" />
            <Entry Text="{Binding Author}" x:Name="avtor" Placeholder="Автор" TextColor="Black" PlaceholderColor="Black" Margin="0,5,0,0"/>
            <Entry Text="{Binding Year}" x:Name="year" Placeholder="Год издания" TextColor="Black" PlaceholderColor="Black" Margin="0,5,0,0" />
            <Entry Text="{Binding Type}" x:Name="type" Placeholder="Жанр" TextColor="Black" PlaceholderColor="Black" Margin="0,5,0,0"/>
         
            <Button x:Name="kabinetButton" Text="Добавить" TextColor="White" Margin="0,5,0,0" Background="DarkSlateBlue" Clicked="kabinetButton_Clicked" />
            <StackLayout>
                <Label x:Name="stackLabel"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>